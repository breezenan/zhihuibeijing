<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_listimage"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginRight="15dp"
        android:background="#000"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_demo" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_listimage"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="fafahf附近反复阿法拉伐建安费建安费安吉大道发件方阿阿斯顿发发生三方哈哈发货发放大法"
        android:textColor="#000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_pubdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_listimage"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/iv_listimage"
        android:gravity="bottom"
        android:text="2018-03-19"
        android:textColor="#cccccc"
        android:textSize="20sp" />
</RelativeLayout>